import java.util.Scanner;
public class ArrayTest8 {       public static void main(String[] args) {        String[] topping= {"Pepperoni",  "Mushrooms", "Onions", "Sausage", "Bacon"};        int selectNum;
        Scanner scan = new Scanner(System.in);                for(int i=0; i<topping.length; i++) {         System.out.print(topping[i]+" ");        }                System.out.print("1.Pepperoni  2.Mushrooms  3.Onions  4.Sausage  5.Bacon");        selectNum = scan.nextInt();                switch(selectNum) {        case 1 : System.out.print(topping[0]+"이(가) 들어간 피자 완성!"); break;        case 2 : System.out.print(topping[1]+"이(가) 들어간 피자 완성!"); break;        case 3 : System.out.print(topping[2]+"이(가) 들어간 피자 완성!"); break;        case 4 : System.out.print(topping[3]+"이(가) 들어간 피자 완성!"); break;        default : System.out.print(topping[4]+"이(가) 들어간 피자 완성!"); break;        }       }}
