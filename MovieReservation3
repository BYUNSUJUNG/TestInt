import java.util.*;public class MovieReservation3 {
 public static void main(String[] args) {   int seat[] = new int[10];   int input=0;      Scanner scan = new Scanner(System.in);        while(true) {        System.out.println("------------------------------");    for(int i=0; i<seat.length; i++)    System.out.print((i+1)+" ");    System.out.println(" ");    System.out.println("------------------------------");    for(int i=0; i<seat.length; i++)    System.out.print(seat[i]+" ");    System.out.println(" ");       System.out.print("원하시는 자석번호를 입력하세요(종료는 -1/ 자석취소는 -2): ");    input=scan.nextInt();    System.out.println(" ");      if(input<0) {      if(input==-1) break;      else if(input==-2) {       System.out.print("취소 자석번호를 입력하세요:");       input=scan.nextInt();       seat[input-1]=0;      }     }else {      if(seat[input-1]==0) {      seat[input-1]=1;          System.out.println("예약되었습니다.");      System.out.println(" ");         } else {      System.out.println("이미 예약된 자리입니다.");      System.out.println(" ");        }    }   }   System.out.println("종료되었습니다.");    }
}
