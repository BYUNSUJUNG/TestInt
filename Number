import java.util.Scanner;public class number {
 public static void main(String[] args) {  // if문을 사용하여 홀수와 짝수를 구별하는 프로그램  int integer;  Scanner input= new Scanner(System.in);  System.out.print("정수를 입력하시오: ");  integer = input.nextInt();    if(integer % 2==0) {   System.out.println("입력된 정수는 짝수입니다. "); // 한줄일때는 { } 안해도 오류 안뜬다     } else {   System.out.println("입력된 정수는 홀수입니다. ");  }    System.out.println("프로그램이 종료되었습니다."); }}
