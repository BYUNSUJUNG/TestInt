import java.util.Scanner; public class ArrayTest6 {       public static void main(String[] args) {             final int STUDENTS = 5;             double total = 0;             Scanner scan = new Scanner(System.in);              double[] scores = new double[STUDENTS];
             for (int i = 0; i < scores.length; i++) {                    System.out.print("성적을 입력하시오:");                    scores[i] = scan.nextDouble();             }             for (int i = 0; i < scores.length; i++)                    total += scores[i];             System.out.println("평균 성적은" + total / STUDENTS + "입니다");       }}
