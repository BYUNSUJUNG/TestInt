import java.util.*;public class MovieReservation {
 public static void main(String[] args) {   int seat[] = new int[10];   int input=0;      Scanner scan = new Scanner(System.in);      System.out.println("------------------------------");   for(int i=0; i<seat.length; i++)   System.out.print((i+1)+" ");   System.out.println(" ");   System.out.println("------------------------------");   for(int i=0; i<seat.length; i++)   System.out.print(seat[i]+" ");   System.out.println(" ");        while(input != -1) {    System.out.print("원하시는 자석번호를 입력하세요(종료는 -1): ");    input=scan.nextInt();    System.out.println(" ");      if(seat[input-1]==0) {       seat[input-1]=1;          System.out.println("예약되었습니다.");      System.out.println("------------------------------");      for(int i=0; i<seat.length; i++)      System.out.print((i+1)+" ");      System.out.println(" ");      System.out.println("------------------------------");      for(int i=0; i<seat.length; i++)      System.out.print(seat[i]+" ");      System.out.println(" ");     }else {      System.out.println("이미 예약된 자리입니다.");      System.out.println(" ");           }   }    }
}
